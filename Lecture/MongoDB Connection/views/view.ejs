<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View User</title>
</head>

<body>
    <div align="center">
        <h2>View User</h2>
        <table border="2">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Gender</th>
                    <th>Hobby</th>
                    <th>City</th>
                    <th>Phone</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% record.map((val,i)=>{ 
                    const {id,name,email,password,gender,hobby,city,phone} = val;
                    %>
                    <tr>
                        <td><%= ++i %></td>
                        <td><%= name %></td>
                        <td><%= email %></td>
                        <td><%= password %></td>
                        <td><%= gender %></td>
                        <td><%= hobby %></td>
                        <td><%= city %></td>
                        <td><%= phone %></td>
                        <td>
                            <a href="/deleteRecord?deleteId=<%= id %>">Delete</a> ||
                            <a href="/editRecord?Id=<%= id %>">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/add">Add</a>
    </div>
</body>

</html>