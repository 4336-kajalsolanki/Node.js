<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
</head>

<body>
    <div align="center">
        <h2>Edit User</h2>
        <form method="post" action="/insertRecord">
            <table border="2">
                <tr>
                    <td>Name :- </td>
                    <td><input type="text" value="<%= data.name %>" name="name"></td>
                </tr>
                <tr>
                    <td>Email :- </td>
                    <td><input type="text" value="<%= data.email %>" name="email"></td>
                </tr>
                <tr>
                    <td>Password :- </td>
                    <td><input type="text" value="<%= data.password %>" name="password"></td>
                </tr>
                <tr>
                    <td>Gender :- </td>
                    <td>
                        <input type="radio" <% if(data.gender=="male" ) { %> checked <% } %> name="gender"
                            value="male"> Male
                        <input type="radio" <% if(data.gender=="female" ) { %> checked <% } %> name="gender"
                            value="female">Female
                    </td>
                </tr>
                <tr>
                    <td>Hobby :- </td>
                    <td>
                        <input type="checkbox" name="hobby" <% if(data.hobby.includes("reading")) { %> checked <% } %>
                            value="reading">Reading
                        <input type="checkbox" name="hobby" <% if(data.hobby.includes("cooking")) { %> checked <% } %> 
                            value="cooking">Cooking
                        <input type="checkbox" name="hobby" <% if(data.hobby.includes("writing")) { %> checked <% } %> 
                            +value="writing">Writing
                    </td>
                </tr>
                <tr>
                    <td>City :- </td>
                    <td>
                        <select name="city">
                            <option>---Select City---</option>
                            <% const city=["Surat","Vadodara","Ahemdabad","Rajkot"]; city.map((ci)=>{
                                %>
                                <option <% if(data.city==ci) { %> selected <% } %> value="<%= ci %>"><%= ci %>
                                </option>
                                <% }) %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Phone :- </td>
                    <td><input type="number" value="<%= data.phone %>" name="phone"></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit"></td>
                </tr>
            </table>
        </form>
        <a href="/">View</a>
    </div>

</body>

</html>