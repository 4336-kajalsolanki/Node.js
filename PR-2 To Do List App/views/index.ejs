<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
        }

        .container {
            width: 90%;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            margin: 50px auto;
            border-radius: 10px;
        }

        h1 {
            background-color: #4CAF50;
            color: white;
            font-size: 28px;
            padding: 20px;
            margin: 0;
            text-align: center;
        }

        .form-container,
        .table-container {
            width: 48%;
            padding: 5px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
            font-size: 24px;
        }

        form {
            margin-bottom: 30px;
        }

        form td {
            padding: 10px;
        }

        form input[type="text"],
        form input[type="datetime-local"] {
            width: calc(100% - 20px);
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            outline: none;
            transition: border-color 0.3s;
        }

        form input[type="text"]:focus,
        form input[type="datetime-local"]:focus {
            border-color: #4CAF50;
        }

        form input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 20px;
            transition: background-color 0.3s;
        }

        form input[type="submit"]:hover {
            background-color: #45a049;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table th,
        table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        table th {
            background-color: #4CAF50;
            color: white;
        }

        table td a {
            text-decoration: none;
            color: #4CAF50;
            padding: 6px 12px;
            border: 1px solid #4CAF50;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        table td a:hover {
            background-color: #4CAF50;
            color: white;
        }

        table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table tr:hover {
            background-color: #ddd;
        }
    </style>
</head>

<body>
    <h1>Todo List</h1>
    <div class="container" align="center">
        <div class="form-container">
            <h2>Add Task</h2>
            <form action="/insertRecord" method="post">
                <table>
                    <tr>
                        <td>Task :- </td>
                        <td><input type="text" name="task" placeholder="Enter Task" required></td>
                    </tr>
                    <tr>
                        <td>Status :- </td>
                        <td><input type="text" name="status" placeholder="Enter Status" required></td>
                    </tr>
                    <tr>
                        <td>Deadline :- </td>
                        <td><input type="datetime-local" name="deadline" required></td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="submit" value="Add Task">
                        </td>
                    </tr>
                </table>
            </form>
        </div>

        <div class="table-container">
            <h2>Todo List</h2>
            <table>
                <thead>
                    <tr>
                        <th>Sr No.</th>
                        <th>Task</th>
                        <th>Status</th>
                        <th>Deadline</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% all.map((User,i)=>{ const {id,task,status,deadline} = User; %>
                        <tr>
                            <td>
                                <%= ++i %>
                            </td>
                            <td>
                                <%= task %>
                            </td>
                            <td>
                                <%= status %>
                            </td>
                            <td>
                                <%= deadline %>
                            </td>
                            <td>
                                <a href="/editUser?id=<%= id %>">Edit</a> ||
                                <a href="/deleteUser?id=<%= id %>">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>